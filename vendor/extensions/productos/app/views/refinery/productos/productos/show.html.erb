<% content_for :body_content_title do %>
  <%= @producto.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @producto.name %>
    </p>
  </section>
  <section>
    <h1>Fabricante</h1>
    <p>
      <%=raw @producto.fabricante %>
    </p>
  </section>
  <section>
    <h1>Propiedades</h1>
    <p>
      <%=raw @producto.propiedades %>
    </p>
  </section>
  <section>
    <h1>Aplicaciones</h1>
    <p>
      <%=raw @producto.aplicaciones %>
    </p>
  </section>
  <section>
    <h1>Disponibilidad</h1>
    <p>
      <%=raw @producto.disponibilidad %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="productos">
      <% @productos.each do |producto| %>
        <li>
          <%= link_to producto.name, refinery.productos_producto_path(producto) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
