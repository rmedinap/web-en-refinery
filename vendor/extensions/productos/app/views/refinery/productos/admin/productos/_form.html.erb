<%= form_for [refinery, :productos_admin, @producto] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @producto,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:fabricante, :propiedades, :aplicaciones, :disponibilidad],
                :object => "productos/producto" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.productos.admin.productos.producto'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @producto.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
